{
    "name": "pragmarx/glottos",

    "description": "A PHP 5.3+ Online Translation/Localization System",

    "keywords": ["translation", "localization", "laravel"],

    "license": "BSD-3-Clause",

    "authors": [
        {
            "name": "Antonio Carlos Ribeiro",
            "email": "acr@antoniocarlosribeiro.com",
            "role": "Creator & Designer"
        }
    ],

    "require": {
        "php": ">=5.3.7",
        "illuminate/support": "~4|~5",
        "illuminate/filesystem": "~4|~5",
        "illuminate/console": "~4|~5",
        "symfony/translation": "~2"
    },

    "require-dev": {
        "mockery/mockery": "0.8.0"
    },

    "autoload": {
        "classmap": [
            "src/migrations"
        ],
        "psr-4": {
            "PragmaRX\\Glottos\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },

    "extra": {
            "component": "package",
            "frameworks": ["Laravel 4"],
            "versions": {
                    "1": "master"
            },
            "branch-alias": {
                    "dev-master": "1.0-dev"
            }
    },

    "minimum-stability": "dev"
}
